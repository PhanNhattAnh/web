
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/UserLayoutTest.cshtml";
}

<h2>DangKy</h2>
<table class="table">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        {
            
            <tr>
                <td style="text-align:right;">Họ Tên KH: </td>
                <td>@Html.TextBox("HotenKH", "", new { @class = "form-control" }) @*<input type="text" name="HotenKH" style="width:200px" class="form-control">*@ @ViewData["Loi1"]</td>
            </tr>
            <tr>
                <td style="text-align:right;">Tên Đăng nhập: </td>
                <td>@Html.TextBox("TenDN", "", new { @class = "form-control" }) @ViewData["Loi2"] </td>
            </tr>
            <tr>
                <td style="text-align:right;">Mật Khẩu: </td>
                <td>@Html.Password("Matkhau", "", new { @class = "form-control" }) @ViewData["Loi3"]</td>
            </tr>
            <tr>
                <td style="text-align:right;">Nhập lại Mật khẩu: </td>
                <td>@Html.Password("ReMatkhau", "", new { @class = "form-control" }) @ViewData["Loi4"]</td>
            </tr>
            <tr>
                <td style="text-align:right;">Điện thoại:</td>
                <td>@Html.TextBox("Dienthoai", "", new { @class = "form-control" }) @ViewData["Loi5"]</td>
            </tr>
            <tr>
                <td style="text-align:right;"> Địa Chỉ: </td>
                <td> <input type="text" name="Diachi" style="width:400px" class="form-control" /></td>
            </tr>
            <tr>
                <td colspan="2"><input type="submit" value="ĐĂNG KÝ" class="btn btn-primary" /></td>
            </tr>
        }
    }

</table>
