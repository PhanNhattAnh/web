
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/UserLayoutTest.cshtml";
}

<h2>Đăng Nhập</h2>
<table class="table">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        {
            <tr>
                <td style="text-align:right;">Tên Đăng nhập:</td>
                <td>@Html.TextBox("TenTK", "", new { @class = "form-control" }) @ViewData["Loi1"]</td>
            </tr>
            <tr>
                <td style="text-align:right;">Mật khẩu:</td>
                <td>@Html.TextBox("MK", "", new { @class = "form-control" }) @ViewData["Loi2"] </td>
            </tr>
            <tr>
                <td colspan="2"><input type="submit" value="ĐĂNG NHẬP" class="btn btn-primary" /></td>
            </tr>
        }
    }
</table>
