
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/UserLayoutTest.cshtml";
}


<center>
    <div class="card border-dark">
        <table class="table">
            <tr>
                <th>#</th>
                <th>Sản phẩm</th>
                <th>Ảnh</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {

                <tr>

                    <td width="12%">@item.iMaLT</td>
                    <td width="26%"><strong>@item.sTenLT</strong></td>

                    <td width="22%"><img src="~/image/@item.sAnhBia" width="40%" /></td>




                    @using (Html.BeginForm("GioHang", "GioHang", new { @ms = item.iMaLT }))
                    {
                        <td width="12%"><input type="number" min="1" name="txtSoLuong" value="@item.iSoLuong" size="2" /></td>
                        @*<td width="12%">@String.Format("{0:0,0}", item.dDonGia)</td>*@
                        <td width="12%">@String.Format("{0:0,0}", item.dThanhTien)</td>
                        <td><a href="@Url.Action("XemChiTiet", "LapTop", new { @ms = item.iMaLT })">Detail</a></td>
                        <td>@Html.ActionLink("Delete", "XoaGioHang", new { @ms = item.iMaLT })</td>
                        <td>
                            <a href="@Url.Action("TrangChu", "LapTop")">
                                <input type="submit" value="Cập Nhật" class="btn btn-primary" />
                            </a>
                        </td>
                    }
                </tr>
            }


            <tr style="background-color:lightyellow">
                <td colspan="3" style="color:blue;font-weight:bold;text-align:right;">Tổng Cộng</td>
                <td style="color:blue;font-weight:bold;">SL:@ViewBag.TongSoLuong</td>
                <td></td>
                <td colspan="4" style="color:red;font-weight:bold;text-align:left;">Tổng Tiền: @String.Format("{0:0,0}", ViewBag.TongThanhTien)</td>
            </tr>


        </table>
            </div>
            



 </center>


