
@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Shared/UserLayoutTest.cshtml";
}

<h2>XemChiTiet</h2>

<div class="card border-white">
    <table class="border-white mx-3 mb-3 mt-3">
        <tr class="text-left">
            <td rowspan="5" width="45%">
                <img class="card-header" src="@Url.Content("~/image/" + Model.AnhBia)" width="100%" , height="100%" , alt="Image fail" />
            </td>
            <td width="20%"> Tên sản phẩm: </td>
            <td width="35%" style="font-weight: bold; color: blue;"> @Model.TenSP</td>
        </tr>
        <tr class="text-left">
            <td>Hãng điện thoại: </td>
            <td style="">@Model.Loai.TenLoai</td>
        </tr>
        <tr class="text-left">
            <td>Mô tả kỹ thuật: </td>
            <td style="">@Model.MoTa</td>
        </tr>
        <tr class="text-left">
            <td>Giá bán: </td>
            <td class="text-justify" style="color: red">@Model.GiaBan VND</td>
        </tr>
        <tr class="text-left">
            <td>Số lượng còn: </td>
            <td style="font-weight: bold">@Model.SoLuongTon</td>
        </tr>
        <tr>
            <td>
                <a href="@Url.Action("ThemGioHang","GioHang", new { @MS = Model.MaSP, @strURL = Request.Url.ToString()})">
                    <input type="submit" value="Thêm Giỏ Hàng" class="btn btn-primary" /> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                </a>
                <a href="@Url.Action("TrangChu","LapTop")">
                    <input type="submit" value="MUA TIẾP" class="btn btn-primary" />
                </a>

            </td>
        </tr>
    </table>
</div>